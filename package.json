{
    "name": "@pigjs/fabric",
    "version": "1.0.0",
    "description": "一个配置文件的集合，包含了prettier, eslint, stylelint, husky, git hooks 可以自动生成配置文件",
    "keywords": [
        "eslint",
        "stylelint",
        "prettier",
        "husky",
        "git merge",
        "git commit"
    ],
    "homepage": "https://github.com/pigjs/fabric#readme",
    "bugs": {
        "url": "https://github.com/pigjs/fabric/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/pigjs/fabric"
    },
    "license": "ISC",
    "author": "MrYeZiqing",
    "main": "lib/index.js",
    "bin": {
        "pig-fabric": "bin/index.js"
    },
    "files": [
        "bin",
        "lib",
        "template"
    ],
    "scripts": {
        "build": "father-build && npm run copy",
        "commit-msg": "node ./bin/index.js --hooks=commit-msg",
        "copy": "copyfiles -u 1 src/eslint/tsconfig.json ./lib",
        "dev": "father-build -w",
        "pre-commit": "node ./bin/index.js --hooks=pre-commit && lint-staged",
        "pre-merge-commit": "node ./bin/index.js --hooks=pre-merge-commit",
        "prepare": "npx husky install",
        "pub": "npm publish --access public"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,less,css,md}": "pretty-quick --staged",
        "*.{js,jsx,ts,tsx}": "eslint --no-eslintrc -c ./.eslintrc.js --fix --quiet"
    },
    "dependencies": {
        "@babel/core": "^7.12.10",
        "@babel/eslint-parser": "^7.12.1",
        "@babel/plugin-proposal-class-properties": "^7.13.0",
        "@babel/plugin-proposal-decorators": "^7.13.5",
        "@babel/preset-env": "^7.12.11",
        "@babel/preset-react": "^7.12.10",
        "@babel/preset-typescript": "^7.12.7",
        "@typescript-eslint/eslint-plugin": "^5.8.1",
        "@typescript-eslint/parser": "^5.9.0",
        "chalk": "^4.1.1",
        "copyfiles": "^2.4.1",
        "del": "^6.1.1",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-formatter-pretty": "^4.0.0",
        "eslint-plugin-babel": "^5.3.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jest": "^24.0.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-react": "^7.21.5",
        "eslint-plugin-react-hooks": "^4.1.2",
        "eslint-plugin-unicorn": "^20.0.0",
        "execa": "5.1.1",
        "fast-glob": "^3.2.4",
        "husky": "8.0.2",
        "inquirer": "^8.1.2",
        "lint-staged": "13.0.3",
        "prettier": "2.7.1",
        "prettier-plugin-organize-imports": "^3.0.0",
        "prettier-plugin-packagejson": "^2.2.18",
        "prettier-plugin-two-style-order": "^1.0.0",
        "pretty-quick": "3.1.3",
        "stylelint": "13.13.1",
        "stylelint-config-css-modules": "^2.2.0",
        "stylelint-config-prettier": "^8.0.1",
        "stylelint-config-standard": "^20.0.0",
        "stylelint-declaration-block-no-ignored-properties": "^2.1.0",
        "typescript": "^4.5.4",
        "yargs-parser": "^21.1.1"
    },
    "devDependencies": {
        "@types/copyfiles": "^2.4.1",
        "@types/inquirer": "^7.3.2",
        "@types/lodash": "^4.14.189",
        "babel-plugin-add-module-exports": "^1.0.4",
        "father-build": "^1.22.5",
        "rimraf": "^3.0.2"
    },
    "overrides": {
        "coa": "2.0.2"
    }
}
